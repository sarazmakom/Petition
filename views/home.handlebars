

        <h1>Sign the petition!</h1>

        {{#if error}}
        <div class="error">Oops! Something went wrong. Please try again.</div>
        {{/if}}

        <form method="POST" action="/petition">

            <div class="inputs">
                

                <input id="hidden" type="hidden" name="signature" value="">
                <input type='hidden' name='_csrf' value="{{csrfToken}}">

            </div>

            <h1>Use your mouse to sign the petition:</h1>

            <div class="canvas">
                <canvas id="canv" width="700" height="100"></canvas>
            </div>

            <button type="submit">Submit</button>

        </form>
